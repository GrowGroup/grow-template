extends /inc/foundation/_base.pug
block append config
  - current.id = "contact" // ページのID
  - current.title = "お問い合わせ" // タイトル
  - current.description = "これはお問い合わせフォームの説明文です" // 説明文
  - current.bodyClass = "contact" // body に付与するクラス
  - current.depth = 2 // ページの階層

block body
    +c_page_header(false, "お問い合わせ")
    .l-container
      .c-breadcrumb
        ul
          li
            a(href="#") HOME
          li
            span >
          li
            span CONTACT
    section.l-main
      .l-section
        .l-container
          +contactform("name","action",[
            {
              label: "氏名",
              type: "text",
              name: "name",
              require: true,
              attributes: {
                placeholder: "お名前をご記入ください"
              }
            }, {
              label: "フリガナ",
              type: "text",
              name: "kana",
              require: true,
              attributes: {
                placeholder: "フリガナをご記入ください"
              }
            }, {
              label: "メールアドレス",
              type: "text",
              name: "address",
              require: true,
              attributes: {
                placeholder: "メールアドレスをご記入ください"
              }
            }, {
              label: "TEL",
              type: "text",
              name: "address",
              require: false,
              attributes: {
                placeholder: "お電話番号をご記入ください"
              }
            }, {
              label: "ご住所",
              type: "text",
              name: "addr2",
              require: false,
            }, {
              label: "お問い合わせ種別",
              type: "radio",
              name: "type",
              require: true,
              options: [
                {
                  value: "1",
                  label: "採用について"
                }, {
                  value: "2",
                  label: "講習・セミナーについて"
                }, {
                  value: "3",
                  label: "その他"
                }
              ]
            }, {
              label: "ご相談内容",
              type: "textarea",
              name: "addr2",
              require: true,
            }, {
              label: "当サイトを知ったきっかけは？",
              type: "radio",
              name: "type",
              require: true,
              options: [
                {
                  value: "1",
                  label: "知人の紹介"
                }, {
                  value: "2",
                  label: "SNS"
                }, {
                  value: "3",
                  label: "ホームページ"
                }, {
                  value: "4",
                  label: "その他"
                }
              ]
            },
          ])

          .p-privacy
            h4 個人情報の取扱について
            p
              | 入力された個人情報は、当社からの連絡を目的で収集するものであり、原則として、
              br
              | ご本人の承諾なく第三者に開示・提供いたしません。
          p.u-text-center
            button.c-button.is-lg.is-outline 確認画面へ進む


    section.l-sidebar


