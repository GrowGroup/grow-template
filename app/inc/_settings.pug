  config = {

    get rootpath(){
      if ( this.root === "" ){
        return this.root;
      }
      // 第一階層の場合
      if ( current.depth === 1 ){
        return this.root
      }
      var i = current.depth
      var path = ""
      while( i > 1 ){
        path += "../"
        i--;
      }
      // 末尾のスラッシュを削除
      return path.replace(/\/$/g,"")
    },

