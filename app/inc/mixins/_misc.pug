//- img タグ
mixin img(file,alt)
    img(src="/assets/images/" + file, alt!=alt)&attributes(attributes)

//- 背景画像
mixin bgimg(file)
    div(style="background-image: url(/assets/images/" + file + ")")&attributes(attributes)
        block

//- ページヘッダー
mixin c_page_header(image,text)
    if image
        +bgimg(image).c-page-header
            h1!= text
            block
    else
        .c-page-header
            h1!= text
            block

//- ループ
//- +loop(10)
//-   p ここにループするコンテンツ
mixin loop(count)
    - var n = 0
    while n < count
        block
        - n++

//- よくあるご質問
mixin c_faqbox(title,content)
    .c-faqbox.js-accordion
        .c-faqbox__title!= title
        .c-faqbox__content
            if content
                != content
            else
                block

//- ページネーション
mixin c_pagination()
    .c-pagination
        ul
            li: a(href="#").c-pagenation__prev « 前へ
            li: span.is-active 1
            li: a(href="#") 2
            li: a(href="#") 3
            li: a(href="#") 4
            li: a(href="#") 5
            li: a(href="#").c-pagenation__next 次へ »

//- 投稿ページナビゲーション
mixin c_post_nav()
    nav.c-post-navs
        ul
            li.c-post-navs__prev: a(href="#") 前の記事へ
            li.c-post-navs__next: a(href="#") 次の記事へ
