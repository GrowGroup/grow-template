//- 投稿一覧を出力
//-
//- use: +p_post_list_item()
mixin p_post_item(el,image,title,date,category,text)
    #{el}.p-post-item&attributes(attributes)
        .p-post-item__thumbnail
            img(src=image)
        .p-post-item__content
            .p-post-item__date= date
            .p-post-item__category
                .c-label.is-secondary= category
            .p-post-item__title= title
            - if( typeof text !== "undefined" && text ) {
            .p-post-item__text= text
            - }
