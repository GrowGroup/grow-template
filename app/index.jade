extends inc/foundation/_base

block title

    title #{pages.home.title}

block meta
    meta(name='description', content=pages.home.description)
    meta(name='keywords', content=pages.home.keywords)
    meta(name="viewport", content=general.viewport)

block append meta

    //- body タグのクラスを設定
    - var bodyClass = "home";

block body

    main
        // メインビジュアル
        include /inc/object/components/_main-visual

        section.l-main
            .l-section
                .l-container
                    h1.heading.is-xlg 見出し スタイル
                    h2.heading.is-xlg 見出し 極大
                    h1.heading.is-lg 見出し 大
                    h1.heading.is-md 見出し 中
                    h1.heading.is-sm 見出し 小
